@model List<Product>



<table class="table">
    <thead>
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Price</th>
            <th scope="col">Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var prod in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => prod.Title)</td>
                <td>@Html.DisplayFor(modelItem => prod.Price)</td>
                <td>@Html.ActionLink("Detalhes", "Details", new { id = prod.Id }) </td>
                

            </tr>


        }

    </tbody>
</table>