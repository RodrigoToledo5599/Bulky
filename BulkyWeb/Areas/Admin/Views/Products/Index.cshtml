@model List<Product>


<a asp-action="Create">New Product</a> 
<br>
<br>
<table class="table">
    <thead>
        <tr> 
            <th scope="col"><h1>Title</h1></th>
            <th scope="col"><h1>Price</h1></th>
            <th scope="col"></th>
            <th scope="col"><h1>Links</h1></th>
            <th scope="col"></th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var prod in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => prod.Title)</td>
                <td>@Html.DisplayFor(modelItem => prod.Price)</td>
                <td><a href="/Admin/Products/Details/@prod.Id">Details</a></td>
                <td><a class="nav-link Primary link" asp-area="Admin" asp-controller="Products" asp-action="Edit">Edit</a></td>
                <td><a class="nav-link Primary link" asp-area="Admin" asp-controller="Products" asp-action="Delete">Delete</a></td>

            </tr>

        }

    </tbody>
</table>