@model List<Product>


<button class="btn-third"> <a class="nav-link text-dark" asp-area="Admin" asp-controller="Products" asp-action="Create">New Product</a> </button>
<br>
<br>
<table class="table">
    <thead>
        <tr> 
            <th scope="col">Title</th>
            <th scope="col">Price</th>
            <th scope="col"></th>
            <th scope="col">Links</th>
            <th scope="col"></th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var prod in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => prod.Title)</td>
                <td>@Html.DisplayFor(modelItem => prod.Price)</td>
                <td><a class="nav-link text-dark" asp-area="Admin" asp-controller="Products" asp-action="Details">Details</a></td>
                <td><a class="nav-link text-dark" asp-area="Admin" asp-controller="Products" asp-action="Edit">Edit</a></td>
                <td><a class="nav-link text-dark" asp-area="Admin" asp-controller="Products" asp-action="Delete">Delete</a></td>

            </tr>

        }

    </tbody>
</table>